import Card from '../molecules/InfoCard'; 
import Bar from '../molecules/SearchBar';
import Info from '../organism/WeatherInfo';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<video autoplay loop muted class="absolute inset-0 w-auto min-w-full z-10">
			<source src="../../public/OnlyClouds.mp4" type="video/mp4"/>
		</video>
		<div class="relative min-h-full z-20 border rounded-md m-10 justify-center bg-opacity-30 bg-gray-700">
			<div class=" flex flex-row ">

				<div class="m-2 px-5 h-screen w-1/3 border rounded-md">
					<Bar client:idle/>
					<Info/>
					
				</div>
				<div class="m-2 px-5 h-screen w-2/3 border rounded-md">
					<h1>Weather App!!</h1>
					<Bar/>
					<Card/>
					
				</div>
			</div>
		</div>
